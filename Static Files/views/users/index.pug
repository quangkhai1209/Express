extends ../layouts/common
block content
    .alert.alert-danger(style="text-align: center")
        h1 Users page
    a(href="/users/new", class ="btn btn-primary") new users

    form(action="/users/search", method="get")
        .input-group.mt-3.mb-3
            input.form-control(name = "q",placeholder ="Enter to search")
            .input-group-append
                button.btn.btn-secondary search

    table.table.table-striped.table-dark
        thead
            tr
            th(scope='col') ID
            th(scope='col') Name
            th(scope='col') Age
            th(scope='col') Phone
            th(scope='col') Edit
            th(scope='col') Delete
        tbody
            each user in users
                tr
                    th(scope='row')= user.id
                    td= user.name
                    td= user.age
                    td= user.phone
                    td
                        a(href="/books/edit/" + user.id).btn.btn-primary Edit
                    td
                        a(href="/books/" + user.id + "/delete").btn.btn-danger Delete