extends ../layouts/common
block content
    .modal
        form.modal-content.animate(action='', method='post')
            .imgcontainer
                span.close(onclick="document.getElementById('id01').style.display='none'", title='Close Modal') &times;
                img.avatar(src='/imgs/img_avatar2.png', alt='Avatar')
            .container
                label(for='uname')
                    b Username
                input(type='text', placeholder='Enter Username', name='uname', required='', value= values ? values.uname : "")
                label(for='psw')
                    b Password
                input(type='password', placeholder='Enter Password', name='pass', required='',value= values ? values.pass : "")
                button(type='submit') Login
            .container(style='background-color:#f1f1f1')
                each err in errs
                    p= err
